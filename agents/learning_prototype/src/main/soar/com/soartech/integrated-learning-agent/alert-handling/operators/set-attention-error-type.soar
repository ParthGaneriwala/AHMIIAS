echo "\nLoading set-attention-error-type.soar"

### For now, we should only propose this operator if there is not already
### an attention-error-type value. But we'll add this production to handle
### deleting the old value, in case the proposal conditions ever change in
### the future
sp {set-attention-error-type*apply*remove
    :o-support
    (state <s> ^operator <o>
               ^attention-error-type <et>)
    (<o> ^name set-attention-error-type
         ^error-type <> <et>)
-->
    (write (crlf) |Removing old attention-error-type: | <et>)
    (<s> ^attention-error-type <et> -)
    }

sp {set-attention-error-type*apply
    :o-support
    (state <s> ^operator <o>
              -^attention-error-type)
    (<o> ^name set-attention-error-type
         ^error-type <et>)
-->
    (write (crlf) |Setting attention-error-type to: | <et>)
    (<s> ^attention-error-type <et>)
    }

